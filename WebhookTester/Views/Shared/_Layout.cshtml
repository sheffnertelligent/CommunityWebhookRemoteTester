<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/content/favicon.ico"/>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/less")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <h1>
            @Html.ActionLink("Webhook Test Service", "Index", "Home")
        </h1>
        <p>Copy the url above and create a webhook in your Telligent Evolution site. The resulting event data will be displayed below.</p>
        <img class="webhook" src="~/Content/images/webhook_small.png" alt="Webhooks"/>
        <div class="clear"></div>
    </header>
    <div class="main">
        @RenderBody()
    </div>
    <footer>
        <p class="copy">Copyright &copy; @DateTime.Now.Year Telligent, Inc.</p>
        <img class="logo" src="~/Content/images/telligent.png" alt="Telligent, Inc."/>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
